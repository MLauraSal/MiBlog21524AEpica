<%-include("partials/header")  %> 
<link rel="stylesheet" href="/css/admin.css">  
<link rel="stylesheet" href="/css/media.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
</head>
<body>
    <header>
        <div class="nav container">
            <a href="/" class="logo">Marian<span> Blog</span></a>
            <a href="/" class="login">Blog</a>
        </div>
    </header>
    <section class="post-header">
        <div class="header-content post-container">
            <h1 class="header-title">Nueva Publicacion</h1>
        </div>
    </section>
    <section >
        <div>
        
            <form action="#" id="form-nuevo">
                <div class="form-group">
                    <label id="name-label" for="name">Title</label>
                    <input type="text" id="titulo" placeholder="titulo" class="form-control">
                </div>
                <div class="form-group">
                    <label id="imagen-label" for="img">Imagen</label>
                    <input type="text" id="url_imagen" placeholder="url_imagen" class="form-control">
                </div>
                <div class="form-group">
                    <label id="fecha-label" for="number">Date</label>
                    <input type="date" id="fecha_publicacion" class="form-control">
                </div>
                <div class="form-group">
                    <p>Descripcion</p>
                    <textarea id="detalle" class="input-textarea" name="detalle" placeholder="Enter your description here..."></textarea>
                </div>
                <div class="form-group">
                    <label id="autor-label" for="img">Autor</label>
                    <input type="text" id="firma_autor" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" id="submit" class="submit-button">Submit</button>
                  </div>
            </form>
        </div>
    </section>  
    <script src="/js/index.js" type="module"></script>
    <script src="/js/admin.js" type="module"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
